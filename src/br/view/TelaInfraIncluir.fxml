<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="300.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.controllers.TelaInfraIncluirController">
   <children>
      <VBox layoutX="96.0" layoutY="50.0" spacing="10.0">
         <children>
            <HBox spacing="10.0">
               <children>
                  <VBox prefHeight="40.0" prefWidth="183.0">
                     <children>
                        <Label text="Nome:">
                           <font>
                              <Font name="Verdana" size="12.0" />
                           </font>
                        </Label>
                        <TextField fx:id="txf_nome" />
                     </children>
                  </VBox>
                  <VBox prefHeight="40.0" prefWidth="115.0">
                     <children>
                        <Label text="Valor por dia:">
                           <font>
                              <Font name="Verdana" size="12.0" />
                           </font>
                        </Label>
                        <TextField fx:id="txf_valor" />
                     </children>
                  </VBox>
               </children>
            </HBox>
            <VBox prefHeight="106.0" prefWidth="308.0">
               <children>
                  <Label text="Descrição:">
                     <font>
                        <Font name="Verdana" size="12.0" />
                     </font>
                  </Label>
                  <TextArea fx:id="txa_descricao" prefHeight="92.0" prefWidth="308.0" wrapText="true" />
               </children>
            </VBox>
            <HBox alignment="BOTTOM_CENTER" prefHeight="34.0" prefWidth="309.0" spacing="150.0">
               <children>
                  <Button fx:id="btn_cancelar" maxWidth="80.0" minWidth="80.0" mnemonicParsing="false" onAction="#OnClick_btn_cancelar" prefWidth="80.0" text="Cancelar" />
                  <Button fx:id="btn_cadastrar" maxWidth="80.0" minWidth="80.0" mnemonicParsing="false" onAction="#OnClick_btn_cadastrar" prefWidth="80.0" text="Cadastrar" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
